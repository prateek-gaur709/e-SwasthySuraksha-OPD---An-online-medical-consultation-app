<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientRegistrationActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="407dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:layout_gravity=""
            android:gravity="center"
            android:text="Speciality :"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerContainerSpeciality"
            android:layout_width="232dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:scrollIndicators="right"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verifyMobileButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#5B0DF8"
        android:fontFamily="sans-serif"
        android:padding="5dp"
        android:text="Verify Mobile for Selected State>"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Registration/Token Generation Window "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="376dp"
        android:layout_height="241dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/doctorlogo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="112dp"
        android:layout_height="58dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text=" State :"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Spinner
        android:id="@+id/spinnerContainerState"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:backgroundTint="@color/black"
        android:scrollIndicators="right"
        android:spinnerMode="dialog"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/General"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:text="General"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/Speciality"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:layout_gravity="fill"
            android:text="Speciality OPD"
            android:textColor="@color/black"
            android:textSize="25sp" />


    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="396dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="137dp"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="OPD:"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/OPDSpinner"
            android:layout_width="251dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="311dp"
        android:layout_height="68dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="31dp"
        android:backgroundTint="#E6A408"
        android:onClick="logout"
        android:text="Logout Of Previous Session ?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verifyMobileButton" />

</androidx.constraintlayout.widget.ConstraintLayout>